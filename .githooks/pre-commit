#!/bin/sh

touch .commit

date="<!-- $(date -u +%Y-%m-%dT%H:%M:%S%z) -->"
prefix='<!-- DO NOT EDIT. -->
<!-- Generated by git commit hooks. -->
<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>'
suffix='</addons>'
addon=$(tail -n +2 addon.xml)

echo "$date\n$prefix\n$addon\n$suffix" > addons.xml
exit
